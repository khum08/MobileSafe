<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CheckableItem">
        <!--创建自定义属性-->
        <attr name="topText" format="string|reference"/>
        <attr name="onText" format="string|reference"/>
        <attr name="offText" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="SelectItem">
        <attr name="selectTopText" format="string|reference"/>
        <attr name="selectBottomText" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="MyCartView">
        <attr name="cart_background" format="color|reference"/>
        <attr name="text" format="string|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
    </declare-styleable>
    <declare-styleable name="CartView">
        <attr name="svc_circleColor" format="color|reference"/>
        <attr name="svc_rightColor" format="color|reference"/>
        <attr name="svc_plus_color" format="color|reference"/>
        <attr name="svc_text" format="integer|reference"/>
        <attr name="svc_textColor" format="color|reference"/>
        <attr name="svc_textSize" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="pv_progressColor" format="color|reference"/>
        <attr name="pv_width" format="dimension|reference"/>
        <attr name="pv_textSize" format="dimension|reference"/>
        <attr name="pv_textColor" format="color|reference"/>
    </declare-styleable>
</resources>