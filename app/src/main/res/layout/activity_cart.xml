<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.kotlin.khum.mobilesafe.ui.customview.CartView
        android:id="@+id/cv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cart_background="@color/colorPrimary"
        app:text="加入购物车"
        app:textColor="@color/color_white"
        />
    <com.kotlin.khum.mobilesafe.ui.customview.SubCartView
        android:id="@+id/scv"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/cv"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:svc_circleColor="#666"
        app:svc_text="1"
        app:svc_textColor="#666666"
        app:svc_plus_color="@android:color/white"
        app:svc_rightColor="@color/color_red1"
        app:svc_textSize="@dimen/font_14"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="获取数量"
        android:layout_marginTop="30dp"
        />

</android.support.constraint.ConstraintLayout>